<MyOption@SpinnerOption>:
    min_state_time : 0.00000001
    background_color: 0.761, 0.761, 0.761, 1
    background_down: 'dropdown.png'
    on_press: self.background_color = 0.365, 0.761, 0.118, 1
    on_release: self.background_color = 0.761, 0.761, 0.761, 1

<MyLayout>
    #Variables
    left_text:left_vib
    right_text: right_vib
    scroll_text: scroll_sen
    cursor_text: cursor_sen

    #Do not open a default tab
    do_default_tab: False

    #Position of Tabs
    tab_pos: 'top_mid'
    tab_width: self.size[0]/len(self.tab_list)
    
    TabbedPanelItem:
        text: "Controller"
        bold: True
        background_down: 'tab.png'
